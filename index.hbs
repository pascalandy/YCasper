{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
  <nav class="main-nav overlay clearfix">
    {{#if @blog.logo}}
      <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" height="32" width="32" /></a>
    {{/if}}
    {{#if @blog.navigation}}
      <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
    {{/if}}
  </nav>
  <div class="vertical">
    <div class="main-header-content inner">
      <h1 class="page-title">{{@blog.title}}</h1>
      <h2 class="page-description">{{@blog.description}}</h2>
      <br />
      <p>
        <a href="//www.facebook.com/yeechie" title="Facebook" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>&nbsp;&nbsp;
        <a href="//twitter.com/yinchie" title="Twitter" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>&nbsp;&nbsp;
        <a href="//plus.google.com/+YeeChieTu" title="Google Plus" target="_blank"><i class="fa fa-google-plus fa-2x"></i></a>&nbsp;&nbsp;
        <a href="//instagram.com/yinchie" title="Instagram" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>&nbsp;&nbsp;
        <a href="//www.flickr.com/photos/yinchie" title="Flickr" target="_blank"><i class="fa fa-flickr fa-2x"></i></a>
      </p>
    </div>
  </div>
  <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>
{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</main>
<p style="text-align:center"><a href="//www.coinbase.com/yeechie" title="Bitcoin Donation" target="_blank"><i class="fa fa-btc fa-2x"></i></a></p>
